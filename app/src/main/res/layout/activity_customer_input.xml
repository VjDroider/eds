<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"

            android:paddingBottom="100dp"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <android.support.design.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="0dp"
                    app:contentPadding="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="10dp"
                    >
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:text="@string/outlet_name"
                            android:textSize="14sp"


                            />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/order_amount"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvName"

                            />

                        <TextView
                            android:id="@+id/delivery_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/required_delivery_date"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvOrderAmount"

                            />

                        <TextView
                            android:id="@+id/customer_mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/mobile_number_for_order"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDeliveryDate"

                            />

                        <TextView
                            android:id="@+id/customer_remarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/remarks"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvMobileNumber"

                            />
                        <android.support.constraint.Barrier
                            android:id="@+id/barrier3"
                            android:layout_height="wrap_content"
                            app:barrierDirection="right"
                            app:constraint_referenced_ids="name,amount,delivery_date"

                            tools:layout_editor_absoluteX="123dp"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eat Drink Food Point"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toEndOf="@+id/barrier3"
                            app:layout_constraintTop_toTopOf="@+id/name" />

                        <TextView
                            android:id="@+id/tvOrderAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="44,800.00"
                            android:layout_marginStart="10dp"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/barrier3"
                            app:layout_constraintTop_toTopOf="@+id/amount" />

                        <TextView
                            android:id="@+id/tvDeliveryDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/input_bg"

                            android:text="16/4/2019"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/barrier3"
                            app:layout_constraintTop_toTopOf="@+id/delivery_date"
                            app:layout_constraintBottom_toBottomOf="@+id/delivery_date"

                            />


                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/tvMobileNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/input_bg"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:hint="@string/mobile_number_hint"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/barrier3"
                            app:layout_constraintTop_toTopOf="@+id/customer_mobile_number"
                            app:layout_constraintBottom_toBottomOf="@+id/customer_mobile_number"

                            />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/tvCustomerRemarks"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/input_bg"
                            android:gravity="top"

                            android:hint="@string/remarks_hint"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/barrier3"
                            app:layout_constraintTop_toTopOf="@+id/customer_remarks"


                            />

                    </android.support.constraint.ConstraintLayout>
                </android.support.design.card.MaterialCardView>
                <android.support.design.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    app:contentPadding="5dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@android:color/transparent"
                    >
                    <LinearLayout
                        android:id="@+id/signature_view"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/signature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:fontFamily="@font/roboto_italic"
                            android:textColor="@color/black"
                            android:text="@string/customer_signature"
                            android:textSize="16sp"
                            android:paddingBottom="5dp"

                            />
                        <com.github.gcacace.signaturepad.views.SignaturePad
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:id="@+id/signaturePad"
                            android:background="#fff"
                            />
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btnClearSignature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:theme="@style/NegativeButton"
                            android:text="@string/clear_signature"
                            android:textSize="18sp"

                            />
                    </LinearLayout>
                </android.support.design.card.MaterialCardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bottomview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:weightSum="10"
                >
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnCompleteOrder"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="wrap_content"
                    android:theme="@style/PositiveButton"
                    android:text="@string/complete_order"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnReasonForNoOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:theme="@style/PositiveButton"
                    android:text="@string/no_order_reason"

                    />
            </LinearLayout>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/PositiveButton"
                android:text="@string/next"
                android:textSize="22sp"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>