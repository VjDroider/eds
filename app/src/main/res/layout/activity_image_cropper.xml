<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.camera.ImageCropperActivity">
    <!-- Content start-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <com.theartofdev.edmodo.cropper.CropImageView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:cropGuidelines="off"
            custom:cropShape="oval"
            custom:cropFixAspectRatio="true"
            custom:cropShowCropOverlay="true"
            custom:cropBorderLineColor="#857d7e"
            custom:cropBorderLineThickness="1dp"
            />

        <TextView
            android:id="@+id/btnRetake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retake_image"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="17sp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/roboto_medium"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnRetake"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp"
            android:theme="@style/PositiveButton"
            android:textColor="@color/white"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_medium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSave"
            android:layout_centerHorizontal="true"
            android:text="You may move and zoom image"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_move_finger"
            />
    </RelativeLayout>
    <!-- -->
</android.support.design.widget.CoordinatorLayout>